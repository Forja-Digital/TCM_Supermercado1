@model IEnumerable<TCM_Supermercado1.Models.ProdutoLista>

<p>
    <a asp-controller="Produto" asp-action="CadastrarProduto" class="btn btn-primary">Cadastra Produto</a>
</p>

<table class="table custom-table">
    <thead>
        <tr>
            <th>
                <p>Código do produto</p>
            </th>
            <th>
                <p>Categoria</p>
            </th>
            <th>
                <p>Fornecedor</p>
            </th>
            <th>
                <p>Nome</p>
            </th>
            <th>
                <p>Preço</p>
            </th>
            <th>
                <p>Descrição</p>
            </th>
            <th>
                <p>Quantidade</p>
            </th>
            <th class="text-center">Ação</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var produtolista in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => produtolista.cod_produto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => produtolista.nome_categoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => produtolista.nome_fornecedor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => produtolista.nome_produto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => produtolista.preco_produto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => produtolista.descricao_produto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => produtolista.quantidade_produto)
                </td>
